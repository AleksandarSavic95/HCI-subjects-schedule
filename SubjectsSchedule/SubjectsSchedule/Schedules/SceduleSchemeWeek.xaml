<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SubjectsSchedule.Schedules"
             xmlns:planner="http://mindfusion.eu/scheduling/wpf" x:Class="SubjectsSchedule.Schedules.SceduleSchemeWeek"
             mc:Ignorable="d" 
             d:DesignHeight="295" d:DesignWidth="596">
    <Grid>

        <planner:Calendar CurrentView="WeekRange" DelayScrollToolTipFormat="ddd" Date="2017-05-22" Culture="sr" Theme="Silver" HorizontalAlignment="Left" Width="596" EndDate="2017-06-26">
            <planner:Calendar.WeekRangeSettings>
                <planner:WeekRangeSettings DayOfWeekFormat="Full" ShowDayOfWeek="True" ViewStyle="SingleWeek" VisibleRows="1" UseLayoutRounding="False" GroupWeekends="False" TitleFormat="ddd">
                    <planner:WeekRangeSettings.CalendarStyle>
                        <planner:CalendarStyle/>
                    </planner:WeekRangeSettings.CalendarStyle>
                </planner:WeekRangeSettings>
            </planner:Calendar.WeekRangeSettings>
        </planner:Calendar>

    </Grid>
</UserControl>
