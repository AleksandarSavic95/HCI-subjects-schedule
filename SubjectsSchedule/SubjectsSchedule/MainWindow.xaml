<Window x:Class="SubjectsSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:SubjectsSchedule"
        mc:Ignorable="d"
        xmlns:cmd="clr-namespace:SubjectsSchedule.MyCommands"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="350" Width="525"
        l:HelpProvider.HelpKey="Forma">
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed"/>
        <CommandBinding Command="cmd:RoutedCommands.HelloWorld" CanExecute="HelloWorld_CanExecute" Executed="HelloWorld_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Enable" CanExecute="Enable_CanExecute" Executed="Enable_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Komanda" CanExecute="Komanda_CanExecute" Executed="Komanda_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Ugradjene" CanExecute="Ugradjene_CanExecute" Executed="Ugradjene_Executed"></CommandBinding>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock ="Top">
            <MenuItem Header="Komande">
                <MenuItem Header="_Hello World" Command="cmd:RoutedCommands.HelloWorld"></MenuItem>
                <MenuItem Header="_Enable" IsCheckable="True" Command="cmd:RoutedCommands.Enable" IsChecked="{Binding Path=MenuEnabled}"></MenuItem>
                <MenuItem Header="_Komanda" Command="cmd:RoutedCommands.Komanda"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Custom komande" Command="cmd:CustomCommands.testKomanda"></MenuItem>
                <MenuItem Header="_Ugradjene komande" Command="cmd:RoutedCommands.Ugradjene"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Tabele (ili Pregled?)" ToolTip="Pregled svih entiteta aplikacije">
                <MenuItem Header="_Predmeti" ></MenuItem>
                <!--Click=""-->
                <MenuItem Header="Smj_erovi" ></MenuItem>
                <MenuItem Header="_Učionice" ></MenuItem>
                <MenuItem Header="_Softver" ></MenuItem>
            </MenuItem>
            <!-- <MenuItem Header="_Grafika">
                <MenuItem Header="_Custom Renderer 2D Grafika" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="3D Grafika" Click="MenuItem_Click_2"></MenuItem>
            </MenuItem> -->
            <MenuItem Header="_Stil">
                <MenuItem Header="_Stilovi i triggeri" Click="MenuItem_Click_3"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Kontrole">
                <MenuItem Header="_Tabela" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="_Toolbar, Tree, i Kontekstni Meniji" Click="MenuItem_Click_5"></MenuItem>
                <MenuItem Header="_Drag and Drop" Click="MenuItem_Click_4"></MenuItem>
            </MenuItem>
        </Menu>
        <!-- forma za učionicu -->
        <Grid DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" /> <!-- jer su nazivi tu -->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="Opis"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="Broj radnih mijesta"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="Pomjeri sve?!"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="Operativni sistem(i)"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" Text="Instalirani softver"/>
            <TextBlock Margin="5" Grid.Column="1" Grid.Row="4" Text="Odaberite iz liste"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="5" Text="Dodatni elementi"/>

            <TextBox Margin="5" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" l:HelpProvider.HelpKey="Indeks" TextWrapping="Wrap" AcceptsReturn="True" SpellCheck.IsEnabled="True"/>
            <xctk:IntegerUpDown Margin="5" Grid.Column="1" Grid.Row="1" Minimum="1" x:Name="brojMijestaUpDown" l:HelpProvider.HelpKey="Prezime"/>
            <!-- ???? Margin="5" Grid.Column="1" Grid.Row="2" ... -->
            <ComboBox Margin="5" Grid.Column="1" Grid.Row="3" SelectedIndex="0">
                <ComboBoxItem Content="Windows"></ComboBoxItem>
                <ComboBoxItem Content="Linux"></ComboBoxItem>
                <ComboBoxItem Content="Oba"></ComboBoxItem>
            </ComboBox>

            
            <!-- SVE ZA ODABIR JEZIKA
            Osnovni primjer listBox-a: https://msdn.microsoft.com/en-us/library/system.windows.forms.listbox.items(v=vs.110).aspx
            ListBox + DataBase + prikaz odabranog u TextBoxu: https://www.youtube.com/watch?v=I5qvyyhUKfY
            IMA U KODU S VJEŽBI: Move items between to ListBoxes: http://csharphelper.com/blog/2015/11/move-items-between-two-listboxes-in-c/
            -->
            <ListBox Margin="5" Grid.Column="2" Grid.Row="1" Grid.RowSpan="4"
                     Height="104"> <!-- APSOLUTNA VISINA.. ne valja..
                OnLoad nakačiti nešto: https://stackoverflow.com/a/16084207
                Postaviti visinu itema na (ListBox.Height/brojItema): https://stackoverflow.com/a/26558478
                Treći pokušaj: https://stackoverflow.com/a/841618
                -->
                <ListBoxItem>asd</ListBoxItem>
                <ListBoxItem>asd</ListBoxItem>
                <ListBoxItem>asd</ListBoxItem>
            </ListBox>
            
            <!-- Stavljeno kao posljednje, jer se može preskočiti Enter-om -->
            <!-- TODO: da li ćemo praviti da se pamte posljednje selektovani CB-ovi i nakon zatvaranja forme -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2">
                <CheckBox Margin="5" Content="Tabla" IsChecked="True"/>
                <CheckBox Margin="5" Content="Projektor"/> <!-- pamtiti čekiranost u promjenljivoj? Binding? -->
                <CheckBox Margin="5" Content="Pametna tabla"/>
            </StackPanel>

            <Button Name="Potvrda" Padding="10" Margin="10" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="3"
                    MaxWidth="330" HorizontalAlignment="Center">
                Potvrda [Ctrl + ENTER/klik za potvrdu i nastavak unošenja]
            </Button>
        </Grid> <!-- /forma za učionicu -->
        <Grid DockPanel.Dock="Bottom" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="Indeks"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="Ime"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="Prezime"/>

            <TextBox Margin="5" Grid.Column="1" Grid.Row="0" l:HelpProvider.HelpKey="Indeks"/>
            <TextBox Margin="5" Grid.Column="1" Grid.Row="1" l:HelpProvider.HelpKey="Ime"/>
            <TextBox Margin="5" Grid.Column="1" Grid.Row="2" l:HelpProvider.HelpKey="Prezime"/>

            <Button Name="btnOK" Padding="5" Margin="5" Grid.Row="3" Grid.Column="1"  MaxWidth="50" HorizontalAlignment="Right">
                <Button.ToolTip>
                    <StackPanel Orientation="Horizontal">
                        <Image Margin="5" Source="/ttimg.png"></Image>
                        <TextBlock Margin="5" TextWrapping="Wrap" MaxWidth="100">
                        Ovo je kompleksan Tooltip koji može da u sebi ima razne
                        kompleksne stvari uključujući veoma, veoma, veoma dugačak tekst.
                        Naravno, može i nešto drugo da se stavi.
                        </TextBlock>
                    </StackPanel>
                </Button.ToolTip>
                OK
            </Button>
        </Grid>
    </DockPanel>
</Window>

