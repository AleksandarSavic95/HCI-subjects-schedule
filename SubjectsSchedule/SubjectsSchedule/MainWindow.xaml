<Window x:Class="SubjectsSchedule.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:SubjectsSchedule"
        xmlns:f="clr-namespace:SubjectsSchedule.Forme"
        xmlns:s="clr-namespace:SubjectsSchedule.Schedules"
        mc:Ignorable="d"
        xmlns:cmd="clr-namespace:SubjectsSchedule.MyCommands"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="500" Width="800"
        l:HelpProvider.HelpKey="Forma">
    <!-- Global commands: https://stackoverflow.com/a/4710197 -->
    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Help" Executed="CommandBinding_Executed"/>
        <CommandBinding Command="cmd:RoutedCommands.HelloWorld" CanExecute="HelloWorld_CanExecute" Executed="HelloWorld_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Enable" CanExecute="Enable_CanExecute" Executed="Enable_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Komanda" CanExecute="Komanda_CanExecute" Executed="Komanda_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.Ugradjene" CanExecute="Ugradjene_CanExecute"  Executed="Ugradjene_Executed"></CommandBinding>
        
        <CommandBinding Command="cmd:RoutedCommands.NovaUcionica" CanExecute="NovaUcionica_CanExecute" Executed="NovaUcionica_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.NoviPredmet" CanExecute="NoviPredmet_CanExecute" Executed="NoviPredmet_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.NoviSmjer" CanExecute="NoviSmjer_CanExecute" Executed="NoviSmjer_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.NoviSoftver" CanExecute="NoviSoftver_CanExecute" Executed="NoviSoftver_Executed"></CommandBinding>
        <CommandBinding Command="cmd:RoutedCommands.PregledSheme" CanExecute="PregledSheme_CanExecute" Executed="PregledSheme_Executed"></CommandBinding>
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock ="Top">
            <MenuItem Header="Komande">
                <MenuItem Header="_Hello World" Command="cmd:RoutedCommands.HelloWorld"></MenuItem>
                <MenuItem Header="_Enable" IsCheckable="True" Command="cmd:RoutedCommands.Enable" IsChecked="{Binding Path=MenuEnabled}"></MenuItem>
                <MenuItem Header="_Komanda" Command="cmd:RoutedCommands.Komanda"></MenuItem>
                <Separator></Separator>
                <MenuItem Header="_Custom komande" Command="cmd:CustomCommands.testKomanda"></MenuItem>
                <MenuItem Header="_Ugradjene komande" Command="cmd:RoutedCommands.Ugradjene"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Tabele (ili Pregled?)" ToolTip="Pregled svih entiteta aplikacije">
                <MenuItem Header="_Predmeti" ></MenuItem>
                <!--Click=""-->
                <MenuItem Header="Smj_erovi" ></MenuItem>
                <MenuItem Header="_Učionice" ></MenuItem>
                <MenuItem Header="_Softver" ></MenuItem>
            </MenuItem>
            <!-- <MenuItem Header="_Grafika">
                <MenuItem Header="_Custom Renderer 2D Grafika" Click="MenuItem_Click"></MenuItem>
                <MenuItem Header="3D Grafika" Click="MenuItem_Click_2"></MenuItem>
            </MenuItem> -->
            <MenuItem Header="_Staro">
                <MenuItem Header="_Student forma" Click="MenuItem_Click_3"></MenuItem>
            </MenuItem>
            <MenuItem Header="_Kontrole">
                <MenuItem Header="_Tabela" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="_Toolbar, Tree, i Kontekstni Meniji" Click="MenuItem_Click_5"></MenuItem>
                <MenuItem Header="_Drag and Drop" Click="MenuItem_Click_4"></MenuItem>
            </MenuItem>
        </Menu>
        <!-- forma za ????  Visibility="Collapsed" Visibility="Collapsed" Visibility="Collapsed" -->
        <Grid Visibility="Collapsed" DockPanel.Dock="Top" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- jer su nazivi tu -->
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="0" Text="Opis"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="1" Text="Broj radnih mijesta"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="2" Text="Pomjeri sve?!"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="3" Text="Operativni sistem(i)"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="4" Text="Instalirani softver"/>
            <TextBlock Margin="5" Grid.Column="0" Grid.Row="5" Text="Dodatni elementi"/>

            <TextBox Margin="10, 5" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" l:HelpProvider.HelpKey="Indeks" TextWrapping="Wrap" SpellCheck.IsEnabled="True"/>
            <!-- AcceptsReturn="True" ? -->
            <xctk:IntegerUpDown Margin="10, 5" Grid.Column="1" Grid.Row="1" Minimum="1" x:Name="brojTerminaUpDown" l:HelpProvider.HelpKey="Prezime"/>
            <!-- ???? Margin="5" Grid.Column="1" Grid.Row="2" ... -->
            <ComboBox Margin="10, 5" Grid.Column="1" Grid.Row="3" SelectedIndex="0">
                <ComboBoxItem Content="Windows"></ComboBoxItem>
                <ComboBoxItem Content="Linux"></ComboBoxItem>
                <ComboBoxItem Content="Oba"></ComboBoxItem>
            </ComboBox>

            <TextBlock Margin="10, 5" Grid.Column="1" Grid.Row="4" Text="Odaberite iz liste"/>

            <!-- SVE ZA ODABIR JEZIKA
            Osnovni primjer listBox-a: https://msdn.microsoft.com/en-us/library/system.windows.forms.listbox.items(v=vs.110).aspx
            ListBox + DataBase + prikaz odabranog u TextBoxu: https://www.youtube.com/watch?v=I5qvyyhUKfY
            IMA U KODU S VJEŽBI: Move items between to ListBoxes: http://csharphelper.com/blog/2015/11/move-items-between-two-listboxes-in-c/
            -->
            <ListBox Margin="10, 5" Grid.Column="2" Grid.Row="1" Grid.RowSpan="4"
                     Height="104" SelectionMode="Multiple">
                <!-- APSOLUTNA VISINA.. ne valja..
                OnLoad nakačiti nešto: https://stackoverflow.com/a/16084207
                Postaviti visinu itema na (ListBox.Height/brojItema): https://stackoverflow.com/a/26558478
                Treći pokušaj: https://stackoverflow.com/a/841618
                -->
                <ListBoxItem>Jedan</ListBoxItem>
                <ListBoxItem>Dva</ListBoxItem>
                <ListBoxItem>Tri</ListBoxItem>
                <ListBoxItem>Četiri</ListBoxItem>
                <ListBoxItem>Sedam</ListBoxItem>
                <ListBoxItem>Deset</ListBoxItem>
                <ListBoxItem>Osam</ListBoxItem>
            </ListBox>

            <!-- Stavljeno kao posljednje, jer se može preskočiti Enter-om -->
            <!-- TODO: da li ćemo praviti da se pamte posljednje selektovani CB-ovi i nakon zatvaranja forme -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2">
                <CheckBox Margin="10, 5, 5, 5" Content="Tabla" IsChecked="True"/>
                <CheckBox Margin="5" Content="Projektor"/>
                <!-- pamtiti čekiranost u promjenljivoj? Binding? -->
                <CheckBox Margin="5" Content="Pametna tabla"/>
            </StackPanel>

            <!-- reset dugme, bez upisa u bazu? -->
            <Button Grid.Column="0" Grid.Row="7" Name="Reset_" Padding="10" Margin="10" 
                    MaxWidth="330" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock FontSize="14">Isprazni polja</TextBlock>
                    <!-- <TextBlock FontSize="9" HorizontalAlignment="Center">bez potvrde unosa</TextBlock> -->
                    <TextBlock FontSize="10" HorizontalAlignment="Center">[ALT + ENTER]</TextBlock>
                </StackPanel>
            </Button>

            <StackPanel Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" Orientation="Horizontal">
                <Button Name="Potvrda__" Padding="10" Margin="10" 
                    MaxWidth="330" HorizontalAlignment="Center">
                    <StackPanel>
                        <TextBlock FontSize="14" HorizontalAlignment="Center">Unos [ENTER]</TextBlock>

                        <!-- <TextBlock FontSize="9" HorizontalAlignment="Center">[CTRL + ENTER] ili [CTRL + klik]</TextBlock>
                        <TextBlock FontSize="9" HorizontalAlignment="Center">za potvrdu i nastavak unošenja</TextBlock> -->

                        <TextBlock FontSize="10" HorizontalAlignment="Center">[CTRL] uz potvrdu unosa za</TextBlock>
                        <TextBlock FontSize="10" HorizontalAlignment="Center">potvrdu i nastavak unošenja</TextBlock>
                    </StackPanel>
                </Button>
                <!-- <StackPanel Margin="0, 0, 0, 0" VerticalAlignment="Center">
                    <TextBlock Text="Ctrl + ENTER/klik za" />
                    <TextBlock Text="potvrdu i nastavak unošenja" />
                </StackPanel> -->
            </StackPanel>
        </Grid>
        <!-- /forma za ???? -->

        <f:FormaClassroom DockPanel.Dock="Left" Width="400" Visibility="Collapsed" x:Name="ClassroomForma"/>
        <f:FormaSubject DockPanel.Dock="Left" Width="400" Visibility="Collapsed" x:Name="SubjectForma"/>
        <f:FormaFieldOfStudy DockPanel.Dock="Left" Width="400" Visibility="Collapsed" x:Name="FieldOfStudyForma"/>
        <f:FormaSoftver DockPanel.Dock="Left" Width="400" Visibility="Collapsed" x:Name="SoftverForma"/>

        <s:ScheduleScheme DockPanel.Dock="Left" Width="800" Visibility="Collapsed" x:Name="ShemaRasporeda"/>

        <!-- Dugmad za dodavanje entiteta -->
        <StackPanel DockPanel.Dock="Right" MinWidth="100" Width="150" HorizontalAlignment="Right">
            <!-- icon: http://www.iconarchive.com/show/ios7-icons-by-icons8/Science-Classroom-icon.html -->
            <Button Command="cmd:RoutedCommands.NovaUcionica" Margin="5" Padding="5">
                <!-- Click="New_Classroom_Click" -->
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center">Dodaj</TextBlock>
                    <TextBlock HorizontalAlignment="Center"><Bold>U</Bold>čionicu</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="9">[ALT + SHIFT + <Bold>U</Bold>]</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="cmd:RoutedCommands.NoviPredmet" Margin="5" Padding="5">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center">Dodaj</TextBlock>
                    <TextBlock HorizontalAlignment="Center"><Bold>P</Bold>redmet</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="9">[ALT + SHIFT + <Bold>P</Bold>]</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="cmd:RoutedCommands.NoviSmjer" Margin="5" Padding="5" Click="New_FoS_Click">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center">Dodaj</TextBlock>
                    <TextBlock HorizontalAlignment="Center"><Bold>S</Bold>mjer</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="9">[ALT + SHIFT + <Bold>S</Bold>]</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="cmd:RoutedCommands.NoviSoftver" Margin="5" Padding="5" Click="New_Software_Click">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center">Dodaj</TextBlock>
                    <TextBlock HorizontalAlignment="Center">S<Bold>o</Bold>ftver</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="9">[ALT + SHIFT + <Bold>O</Bold>]</TextBlock>
                </StackPanel>
            </Button>

            <Button Command="cmd:RoutedCommands.PregledSheme" Margin="5" Padding="5" Click="New_Software_Click">
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center">Shema</TextBlock>
                    <TextBlock HorizontalAlignment="Center"><Bold>R</Bold>asporeda</TextBlock>
                    <TextBlock HorizontalAlignment="Center" FontSize="9">[ALT + SHIFT + <Bold>R</Bold>]</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </DockPanel>
</Window>

